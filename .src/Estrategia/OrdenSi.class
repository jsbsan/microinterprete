Inherits InterfaceCrearComando
Private comandotmp As New Si

Public Sub guard(valor As String) As Boolean

    If valor = ("si") Then
        Return True
    Else
        Return False
    Endif

End

Public Sub crearComando(linea As String) As Comando

    Dim palabras As String[]

    palabras = Split(linea, ",") 'caracter separador de datos

    If palabras.count = 0 Then
        Return Null
    Else
        comandotmp = New Si
        comandotmp.datos = palabras
        comandotmp.tipo = "interno"
        Return comandotmp
    Endif

End

Public Sub ayuda() As String

    'devuelve lo ayuda sobre el comando

    Return "Evalua una expresion, si es verdad ejecuta el primer grupo de comandos y si es falso ejecuta el segundo grupo de comandos (estan grupos de comandos se separan por el caracter @). Sintaxis:si,[expresion],comandosV1|comandosV2|comandosV3@comandosF1|comandosF2|comandosF3\nEjemplo: si,(2<3),print,\"verdadero\"|print,\"por segunda vez verdadero\"@print,\"falso\"|print,\"por segunda vez es falso\""

End
